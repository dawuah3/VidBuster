@{ 
    var className = Model.Customers.Count > 5 ? "populat" : null;
}

<h2 class="@className">@Model.Movie.Name</h2>

<ul>
    @if (Model.Customers.Count == 0)
    {
        <text>No one has retned this movie</text>
    }
    else
    {

        foreach (var customer in Model.Customers)
        {
            <li>@customer.Name</li>
        }
    }
</ul>

